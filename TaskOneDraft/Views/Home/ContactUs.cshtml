

@{
    ViewData["Title"] = "Contact Us";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    .contact-container {
        background-color: #f0f8ff;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
        margin-bottom: 100px;
    }

    h2 {
        color: #1a1a1a;
        text-shadow: 0 0 5px #00ffcc;
        margin-bottom: 20px;
        font-size: 28px;
        font-weight: bold;
    }

    h4 {
        color: #008b8b;
        margin-top: 20px;
        margin-bottom: 10px;
        font-size: 20px;
    }

    p {
        color: black;
        font-size: 16px;
        line-height: 1.6;
        margin-bottom: 10px;
    }

    .contact-form {
        margin-top: 20px;
    }

    .form-control {
        border: 2px solid #00ced1;
        border-radius: 4px;
        margin-bottom: 10px;
    }

    .btn-primary {
        background-color: #00ced1;
        border: none;
        padding: 10px 20px;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .btn-primary:hover {
            background-color: #008b8b;
            color: white;
        }

    .contact-info {
        margin-top: 20px;
    }

    .icon {
        color: #00ffcc;
        margin-right: 10px;
    }
</style>

<div class="contact-container">
    <h2>Contact Us</h2>

    <p>If you have any questions, feedback, or need assistance, please feel free to reach out to us. Our support team is here to help you!</p>

    <div class="row">
        <div class="col-md-6">
            <h4>Contact Information</h4>
            <p>
                <i class="fas fa-phone icon"></i> Phone: 0861 555 181<br />
                <i class="fas fa-envelope icon"></i> Email: <a href="mailto:support@cmcs.com" class="highlight">support@cmcs.com</a><br />
                <i class="fas fa-map-marker-alt icon"></i> Address: 138 Athens Street, Durban, South Africa
            </p>
        </div>
        <div class="col-md-6">
            <h4>Send Us a Message</h4>
            <form class="contact-form" method="post" asp-action="SendMessage">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="name" placeholder="Enter your name" required />
                    <label for="name">Name</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="email" class="form-control" id="email" placeholder="Enter your email" required />
                    <label for="email">Email</label>
                </div>
                <div class="form-floating mb-3">
                    <textarea class="form-control" id="message" placeholder="Type your message" style="height: 100px" required></textarea>
                    <label for="message">Message</label>
                </div>
                <button type="submit" class="btn btn-primary w-100">Send Message</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}

@{
    ViewData["Title"] = "Generate Reports";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    body {
        background-color: #f0f8ff;
        margin-bottom: 70px;
    }

    h1 {
        color: #1a1a1a;
        text-shadow: 0 0 5px #00ffcc;
        font-size: 36px;
        margin-top: 30px;
        text-align: center;
    }

    h3 {
        color: #00ced1;
        text-shadow: 0 0 5px #00ffcc;
        font-size: 24px;
        text-align: center;
        margin-top: 20px;
    }

    .coming-soon-container {
        text-align: center;
        margin-top: 50px;
    }

    .coming-soon-message {
        font-size: 20px;
        color: #555;
        text-shadow: 0 0 5px #00ffcc;
        margin-bottom: 20px;
    }

    .timer-container {
        display: flex;
        justify-content: center;
        margin-top: 30px;
    }

    .timer-box {
        background: linear-gradient(135deg, #00ced1, #20b2aa);
        border-radius: 8px;
        padding: 20px;
        margin: 10px;
        color: white;
        font-size: 28px;
        text-align: center;
        box-shadow: 0 4px 8px rgba(0, 128, 128, 0.4);
    }

    .progress-container {
        margin-top: 50px;
        width: 70%;
        margin-left: auto;
        margin-right: auto;
    }

    .progress-bar {
        background: linear-gradient(135deg, #ff6347, #ff4500);
        height: 50px;
        border-radius: 5px;
        color: white;
        font-weight: bold;
        text-align: center;
        line-height: 30px;
        box-shadow: 0 4px 10px rgba(255, 69, 0, 0.4);
    }

    .email-notification {
        margin-top: 50px;
        text-align: center;
    }

    .btn-notify {
        background-color: #00ced1;
        border: none;
        padding: 10px 20px;
        border-radius: 25px;
        color: white;
        transition: background-color 0.3s ease;
        box-shadow: 0 4px 10px rgba(0, 206, 209, 0.5);
    }

        .btn-notify:hover {
            background-color: #008b8b;
        }

    .image-placeholder {
        margin-top: 40px;
        text-align: center;
    }

        .image-placeholder img {
            width: 400px;
            height: auto;
        }

    .description-text {
        font-size: 18px;
        color: #333;
        margin-top: 20px;
        text-align: center;
        padding: 0 20px;
    }

    /* Toast notification styling */
    .toast {
        position: fixed;
        top: 20px;
        right: 20px;
        z-index: 9999;
        min-width: 250px;
    }

    .toast-header {
        background-color: #00ced1;
        color: white;
    }
</style>

<h1>Generate Reports</h1>
<h3>Feature Coming Soon</h3>

<div class="coming-soon-container">
    <p class="coming-soon-message">We're hard at work building this feature for you. Reports will be available soon, allowing you to gain valuable insights. Stay tuned!</p>

    <!-- Countdown Timer -->
    <div class="timer-container">
        <div class="timer-box" id="days">
            00 Days
        </div>
        <div class="timer-box" id="hours">
            00 Hrs
        </div>
        <div class="timer-box" id="minutes">
            00 Mins
        </div>
        <div class="timer-box" id="seconds">
            00 Secs
        </div>
    </div>

    <!-- Progress bar showing work status -->
    <div class="progress-container">
        <div class="progress">
            <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 70%;">70% Complete</div>
        </div>
    </div>

    <!-- Email notification -->
    <div class="email-notification">
        <p>Want to be notified when the report feature is live?</p>
        <button class="btn-notify" id="notifyBtn">Notify Me</button>
    </div>

    <!-- Short description text -->
    <p class="description-text">Our upcoming report generation feature will allow you to create, download, and analyze data effortlessly. Your feedback helps us make it even better!</p>
</div>

<!-- Toast Notification -->
<div class="toast" id="notificationToast" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-header">
        <strong class="me-auto">ClaimEase CMCS</strong>
        <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
    <div class="toast-body">
        Watch your inbox for updates!
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
    // Countdown timer logic
    var countdownDate = new Date("Dec 31, 2024 12:00:00").getTime();

    var x = setInterval(function () {
        var now = new Date().getTime();
        var distance = countdownDate - now;

        var days = Math.floor(distance / (1000 * 60 * 60 * 24));
        var hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        var minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
        var seconds = Math.floor((distance % (1000 * 60)) / 1000);

        document.getElementById("days").innerHTML = days + " Days";
        document.getElementById("hours").innerHTML = hours + " Hrs";
        document.getElementById("minutes").innerHTML = minutes + " Mins";
        document.getElementById("seconds").innerHTML = seconds + " Secs";

        if (distance < 0) {
            clearInterval(x);
            document.querySelector('.coming-soon-message').innerHTML = "The feature is live now!";
            document.querySelector('.progress-bar').style.width = '100%';
            document.querySelector('.progress-bar').innerHTML = '100% Complete';
        }
    }, 1000);

    // Show toast notification on "Notify Me" button click
    document.getElementById('notifyBtn').addEventListener('click', function () {
        var toast = new bootstrap.Toast(document.getElementById('notificationToast'));
        toast.show();
    });
</script>

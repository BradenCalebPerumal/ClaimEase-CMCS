@model IEnumerable<(string Id, string Email, string FirstName)>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    body {
        font-family: 'Segoe UI', Arial, sans-serif;
        background-color: #f4f4f4;
        color: #333;
        margin-bottom: 100px;
    }

    h2 {
        color: #1a1a1a; /* Heading color */
        text-shadow: 0 0 5px #00ffcc; /* Glowing effect for heading */
        margin-bottom: 20px; /* Space below heading */
        font-size: 30px; /* Larger heading font size */
    }

    .search-container {
        margin-bottom: 20px;
        display: flex;
        justify-content: left;
        gap: 10px;
    }

    .search-input {
        width: 300px;
        border: 2px solid #00ced1;
        border-radius: 4px;
        padding: 10px;
        font-size: 16px;
    }

    .btn-reset {
        background-color: #ff6347;
        border: none;
        padding: 10px 20px;
        border-radius: 4px;
        font-size: 16px;
        color: white;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .btn-reset:hover {
            background-color: #d9534f;
        }

    .card-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 30px;
        margin-top: 40px;
    }

    .lecturer-card {
        background: linear-gradient(to bottom right, white, #e0ffff);
        border-radius: 12px;
        padding: 20px;
        width: 280px;
        text-align: center;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .lecturer-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
        }

    .card-title {
        font-size: 18px;
        font-weight: bold;
        color: teal;
        margin-bottom: 10px;
        text-shadow: 0 0 2px #00ffcc;
    }

    .card-email {
        font-size: 16px;
        color: black;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .lecturer-icon {
        font-size: 40px;
        color: #00bcd4;
        margin-bottom: 15px;
    }

    .btn-primary {
        background-color: #00ffcc;
        border: none;
        padding: 10px 20px;
        color: black;
        border-radius: 4px;
        font-size: 16px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background-color: blue;
            box-shadow: 0 0 10px #00ffcc, 0 0 20px #00ffcc, 0 0 30px #00ffcc;
        }

    .no-users {
        text-align: center;
        font-size: 18px;
        margin-top: 30px;
        color: #555;
    }
</style>

<h2>Generate Report</h2>

<div class="search-container">
    <input type="text" id="searchInput" class="search-input" placeholder="Search by Email or Employee ID">
    <button id="resetButton" class="btn-reset">Reset</button>
</div>

@if (Model.Any())
{
    <div class="card-container" id="lecturersCardContainer">
        @foreach (var lecturer in Model)
        {
            <div class="lecturer-card">
                <div class="lecturer-icon">
                    <i class="fas fa-user-circle"></i>
                </div>
                <div class="card-title">Emp ID: @lecturer.FirstName</div>
                <div class="card-email">Email: @lecturer.Email</div>
                <a asp-action="GenerateReportForm" asp-route-lecturerId="@lecturer.Id" class="btn btn-primary">Generate Report</a>
            </div>
        }
    </div>
}
else
{
    <p class="no-users">No lecturers found.</p>
}

<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $('#searchInput').on('keyup', function () {
            var value = $(this).val().toLowerCase();
            $('#lecturersCardContainer .lecturer-card').filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
            });
        });

        $('#resetButton').click(function () {
            $('#searchInput').val('');
            $('#lecturersCardContainer .lecturer-card').show();
        });
    });
</script>

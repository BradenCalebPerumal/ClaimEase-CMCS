@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    .table {
        margin-top: 20px;
    }

    h2 {
        color: #1a1a1a; /* Heading color */
        text-shadow: 0 0 5px #00ffcc; /* Glowing effect for heading */
        margin-bottom: 20px; /* Space below heading */
        font-size: 30px; /* Larger heading font size */
    }

    .search-container {
        margin-bottom: 20px;
    }

    .search-input {
        border: 2px solid #00ced1;
        border-radius: 4px;
        padding: 5px 10px;
        margin-right: 10px;
    }

    .btn-reset {
        background-color: #ff6347; /* Tomato color */
        border: none;
        padding: 5px 10px;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .btn-reset:hover {
            background-color: #d9534f; /* Darker red */
            color: white;
        }

    /* Card Styles */
    .card-container {
        display: flex;
        flex-wrap: wrap;
        gap: 30px;
        justify-content: center;
        margin-top: 40px;
    }

    .lecturer-card {
        background-color: white;
        border-radius: 12px;
        padding: 20px;
        width: 280px;
        text-align: center;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .lecturer-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
        }

    .card-title {
        font-size: 16px;
        font-weight: bold;
        color: teal;
        margin-bottom: 10px;
    }

    .card-email {
        font-size: 16px;
        color: teal;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .lecturer-icon {
        font-size: 40px;
        color: #00bcd4;
        margin-bottom: 15px;
    }

    .no-users {
        text-align: center;
        font-size: 18px;
        margin-top: 30px;
        color: #555;
    }
</style>

<h2>View All Lecturers</h2>

<div class="search-container">
    <input type="text" id="searchInput" class="search-input" placeholder="Search by Email">
    <button id="resetButton" class="btn-reset">Reset</button>
</div>

@if (Model.Any())
{
    <div class="card-container" id="lecturersCardContainer">
        @foreach (var lecturer in Model)
        {
            <div class="lecturer-card">
                <div class="lecturer-icon">
                    <i class="fas fa-user-circle"></i> <!-- Fancy user icon -->
                </div>
                <div class="card-title">Lecturer ID: @lecturer.Id</div>
                <div class="card-email">Email: @lecturer.Email</div>
                <a asp-action="GenerateReportForm" asp-route-lecturerId="@lecturer.Id" class="btn btn-primary">Generate Report</a>
              

            </div>
        }
    </div>
}
else
{
    <p class="no-users">No lecturers found.</p>
}

<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        // Filter cards based on search input
        $('#searchInput').on('keyup', function () {
            var value = $(this).val().toLowerCase();
            $('#lecturersCardContainer .lecturer-card').filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
            });
        });

        // Reset button functionality
        $('#resetButton').click(function () {
            // Clear the search input
            $('#searchInput').val('');

            // Show all cards
            $('#lecturersCardContainer .lecturer-card').show();
        });
    });
</script>

<style>
    .faq-container {
        padding: 20px;
    
        background: rgba(255, 255, 255, 0.8);
        border-radius: 12px;
        box-shadow: 0 8px 16px rgba(0, 255, 255, 0.2);
        border: 1px solid black;
       margin-bottom:100px;
    }

    h2 {
        color: black;
        text-shadow: 0 0 10px #00ffcc;
        margin-bottom: 20px;
        text-align: center;
    }

    .question {
        font-size: 18px;
        font-weight: bold;
        margin-top: 20px;
        color: #1a1a1a;
        text-shadow: 0 0 5px #00ffcc;
    }

    .answer {
        font-size: 16px;
        color: black;
        margin-top: 10px;
        background: rgba(240, 248, 255, 0.9); /* Light blueish background */
        padding: 10px;
        border-radius: 8px;
        box-shadow: 0 0 8px rgba(0, 255, 255, 0.1);
    }

    .btn-back {
        background-color: #00ffcc;
        border: none;
        padding: 10px 20px;
        color: black;
        border-radius: 4px;
        cursor: pointer;
        margin-top: 20px;
        display: block;
        width: fit-content;
        margin-left: auto;
        margin-right: auto;
        transition: all 0.3s ease;
    }

    .btn-back:hover {

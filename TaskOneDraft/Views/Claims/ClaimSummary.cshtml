@model TaskOneDraft.Models.Claims

<div class="claims-summary-container">
    <h2 class="summary-title">Claim Summary</h2>
    <div class="summary-details row">
        <div class="col-md-6">
            <p><strong>Lecturer ID:</strong> @Model.LecturerID</p>
            <p><strong>First Name:</strong> @Model.FirstName</p>
            <p><strong>Last Name:</strong> @Model.LastName</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Claim Period:</strong> @Model.ClaimsPeriodStart.ToShortDateString() - @Model.ClaimsPeriodEnd.ToShortDateString()</p>
        </div>
        <div class="col-md-6">
            <p><strong>Hours Worked:</strong> @Model.HoursWorked</p>
            <p><strong>Rate per Hour:</strong> @Model.RateHour</p>
            <p><strong>Total Amount:</strong> @Model.TotalAmount.ToString("C", new System.Globalization.CultureInfo("en-ZA"))</p>
            <p><strong>Status:</strong> @Model.ClaimStatus</p>
            <p><strong>Date Submitted:</strong> @Model.DateSubmitted.ToShortDateString()</p>
        </div>
        <div class="col-md-12">
            <p><strong>Description of Work:</strong> @Model.DescriptionOfWork</p>
            <p><strong>Document:</strong> @Model.SupportingDocuments</p>
        </div>
    </div>

    <div class="button-group">
        <a href="@Url.Action("Dashboard", "Claims")" class="btn-primary">Back to Dashboard</a>
        <a href="@Url.Action("Index", "Home")" class="btn-primary">Next</a>
    </div>
</div>

<style>
    .claims-summary-container {
        background: white;
        padding: 30px;
        border-radius: 15px;
        margin-bottom: 100px;
        box-shadow: 0 0 20px #00ffcc;
        max-width: 900px;
        margin: auto;
        margin-bottom:200px;
        margin-top: 50px;
    }

    .summary-title {
        color: black;
        text-shadow: 0 0 10px #00ffcc;
        margin-bottom: 30px;
        font-size: 32px;
        text-align: center;
    }

    .summary-details p {
        color: black;
        text-shadow: 0 0 10px #00ffcc;
        font-size: 18px;
        line-height: 1.8;
        margin-bottom: 15px;
    }

    .summary-details strong {
        color: black;
        text-shadow: 0 0 10px #00ffcc;
        font-weight: bold;
    }

    .button-group {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 30px;
    }

    .btn-primary {
        background-color: #00ffcc;
        border: none;
        padding: 12px 30px;
        color: black;
        text-align: center;
        text-decoration: none;
        border-radius: 25px;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 0 10px #00ffcc;
    }

        .btn-primary:hover {
            background-color: blue;
            box-shadow: 0 0 15px #00ffcc, 0 0 25px #00ffcc, 0 0 35px #00ffcc;
        }

        .btn-primary:active {
            transform: translateY(3px);
        }
</style>
